<!DOCTYPE html>

<html>
  <title>Hot Dog Fitness | Home</title>
  <body>
    <p>
      Welcome, <%= current_user.username %>!
    </p>
    <form id="getchallenge" action="/challenge" method="POST">
      <label for="challenge">Challenge</label>
      <input type="text" id="challenge" name="challenge">
      <label for="to">To</label>
      <input type="text" id="to" name="to">
      <input type="submit" hidden=true>
    </form>
    <br>
    CURRENT CHALLENGES
    <br>
    <ul class="list">
      <% for i, item in ipairs(challenges) do %>
      <% if item.to_id == current_user_id then %>
      <form action="/complete" method="POST">
        <button name="challenge" value="<%= item.challenge %>">
          <%= item.challenge %>
        </button>
      </form>
      <% end end %>
    </ul>
  </body>
</html>
